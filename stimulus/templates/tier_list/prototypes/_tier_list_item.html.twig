{% macro displayTierListItem(tierListItemForm) %}
    <div data-collection-target="entry">
        {{ form_row(tierListItemForm.name) }}
        {{ form_row(tierListItemForm.description) }}
        {{ form_row(tierListItemForm.position) }}
        <button type="button" data-action="click->collection#remove">Remove</button>
    </div>
{% endmacro %}
