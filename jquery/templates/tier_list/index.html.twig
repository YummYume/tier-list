{% extends 'base.html.twig' %}

{% block title %}TierList index{% endblock %}

{% block body %}
    <h1>TierList index</h1>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Created at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tier_list in tier_lists %}
            <tr>
                <td>{{ tier_list.name }}</td>
                <td>{{ tier_list.description }}</td>
                <td>{{ tier_list.createdAt ? tier_list.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_tier_list_show', {'id': tier_list.id}) }}">Show</a>
                    <a href="{{ path('app_tier_list_edit', {'id': tier_list.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No records found.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('app_tier_list_new') }}">Create new</a>
{% endblock %}
